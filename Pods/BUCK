)

# Every BUCK file needs at least one library with source.
apple_lib(
    name = "PodsProjectGeneratorHack",
    srcs = glob([
        "BuckSupport/Empty.swift",
    ]),
)

prebuilt_apple_framework(
    name = "Yoga",
    framework = "_Prebuild/GeneratedFrameworks/Yoga/yoga.framework",
    preferred_linkage = "shared",
    visibility = ["PUBLIC"],
)

prebuilt_apple_framework(
    name = "YogaKit",
    framework = "_Prebuild/GeneratedFrameworks/YogaKit/YogaKit.framework",
    preferred_linkage = "shared",
    visibility = ["PUBLIC"],
)